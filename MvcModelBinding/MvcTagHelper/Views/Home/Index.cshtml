@model IEnumerable<City>

@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-sm table-bordered">
    <thead class="bg-primary text-white">
        <tr>
            <th>Name</th>
            <th>Country</th>
            <th class="text-right">Population</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var city in Model)
        {
            <tr>
                <td wrap>@city.Name</td> <!--using tag helper "wrap" insert content before and after "city.name"-->
                <td>@city.Country</td>
                <td class="text-right">@city.Population?.ToString("#,###")</td>
            </tr>
            <tr></tr>
        }
    </tbody>
</table>
<a href="/Home/Create" class="btn btn-primary">Create</a>