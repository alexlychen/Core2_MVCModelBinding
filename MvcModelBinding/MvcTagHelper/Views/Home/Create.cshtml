@model City

@*<form method="post" action="/Home/Create">*@
<form method="post">   <!--Using tag helper with dependency injection-->
    <div class="form-group">
        <label for="Name">Name:</label>
        <input class="form-control" name="Name" />
    </div>
    <div class="form-group">
        <label for="Country">Country:</label>
        <input class="form-control" name="Country" />
    </div>
    <div class="form-group">
        <label for="Population">Population: </label>
        <input class="form-control" name="Population" />
    </div>
    <button type="submit" bs-button-color="default">Add</button>
    <button type="reset" class="btn btn-primary">Reset</button>
    <a bs-button-color="primary" href="/Home/Index">Cancel</a>
</form>
